@model  IEnumerable<Apartment>
<style>
    section:hover {
        opacity: 0.5;
    }

    a:hover {
        color: dimgray;
    }

    header{
        background-image:url('/img/banner.jpg');
        width:100%;
        height:400px;
    }
</style>
<header class=" text-center text-white">
    <div class="masthead-content">
        <div class="container">
            <br />
            <br />
            <br />
            <br />
            <br /><br /><br />
            <h1 class="masthead-heading mb-0">Goa Quick Trips</h1>
            <h2 class="masthead-subheading mb-0">Contact us for the Best Deals</h2>

            <a href="/Home/CustomerForm" class="btn btn-primary btn-xl rounded-pill mt-5">Learn More</a>
        </div>
    </div>

</header>
@{ bool check = true; }
@foreach (var item in Model)
{
<a href="/Home/ApartmentDetail?id=@item.ApartmentID" style="color:black;">

    @if (check == true)
    {

        <section>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 order-lg-2">
                        <div class="p-5">
                            @if (item.Images.Count > 0)
                            {
                                <img class="img-fluid rounded-circle" src="/img/@item.Images.First().Path" alt="">
                            }
                        </div>
                    </div>
                    <div class="col-lg-6 order-lg-1">
                        <div class="p-5">
                            <h2 class="display-4">@item.Name</h2>
                            <p style="font-size:large !important;">@item.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        check = false;
    }
    else
    {
        <section>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="p-5">
                            @if (item.Images.Count > 0)
                            {
                                <img class="img-fluid rounded-circle" src="/img/@item.Images.First().Path" alt="">
                            }
                        </div>
                    </div>
                    <div class="col-lg-6 ">
                        <div class="p-5">
                            <h2 class="display-4">@item.Name</h2>
                            <p style="font-size:large !important;">@item.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        check = true;
    }
</a>
}

