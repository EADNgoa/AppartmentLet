@model  IEnumerable<Apartment>
    <style>
        section:hover{
            opacity:0.5;
        }
        a{
            color:black;
        }
        a:hover{
            color:dimgray;
        }
    </style>
<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container">
            <h1 class="masthead-heading mb-0">One Page Wonder</h1>
            <h2 class="masthead-subheading mb-0">Will Rock Your Socks Off</h2>
            <a href="#" class="btn btn-primary btn-xl rounded-pill mt-5">Learn More</a>
        </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
    <div class="bg-circle-3 bg-circle"></div>
    <div class="bg-circle-4 bg-circle"></div>
</header>
@foreach (var item in Model) {
  <a href="/Home/ApartmentDetail?id=@item.ApartmentID">  
<section>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
                <div class="p-5">
                    <img class="img-fluid rounded-circle" src="img/@item.Images.First().Path" alt="">
                </div>
            </div>
            <div class="col-lg-6 order-lg-1">
                <div class="p-5">
                    <h2 class="display-4">@item.Name</h2>
                    <p style="font-size:large !important;">@item.Description.Substring(0,item.Description.Length)</p>
                </div>
            </div>
        </div>
    </div>
</section>
  </a>
}

