@model PagedList.IPagedList<GoaQuickTrips.Review>
@using PagedList.Mvc;

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
    ViewBag.Title = "Index";
}

<h2>List of Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Apartment.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ReviewDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Review1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().IsVisible)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Apartment.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Apartment.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Review1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsVisible)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apartment.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReviewID }) |
            
            <a href="~/ReviewDetails/Create/@item.ReviewID">Reply</a>
        </td>
    </tr>
}

</table>
<center>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page}))
</center>
